{
  "compilerOptions": {
    "target": "esnext",                     // modern JS output
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,                   // avoids issues in node_modules types
    "strict": true,                         // strict TypeScript checks
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,                         // Next.js handles build
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",             // fixes lucide-react type resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",                      // for React 18+
    "incremental": true,
    "baseUrl": ".",                          // for @/* imports
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      { "name": "next" }                     // Next.js plugin for TS
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
